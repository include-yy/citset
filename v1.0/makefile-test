CC := gcc
CFLAGS := -I include

vpath %.c test
vpath %.c test/citlimb
vpath %.h include

testlimb := $(notdir $(wildcard test/citlimb/*.c))
test := $(notdir $(wildcard test/*.c))

SRCS := $(testlimb) $(test)

TARGETS := $(patsubst %.c, %, $(SRCS))

all : $(TARGETS)

$(TARGETS) : %:%.c
	$(CC) $< $(CFLAGS) libcitset.a -o $@

.PHONY : clean

clean :
	$(RM) $(TARGETS)
